<h1>Listing Albums</h1>

<ul>
	<% if @albums.empty? %>
	<li>No albums available</li>
	<%else%>

    <% @albums.each do |album| %>
   <li class="album"><%= album.title %>
	<%= link_to 'Edit', edit_album_path(album) %></li>
   <ul>
       <li class="artist"><%= album.artist %></li>
       <li class="year"><%= album.year %></li>
   </ul>
   <% end %>
   <% end %>
</ul>
<br>
<%= link_to 'New Album', new_album_path %>
